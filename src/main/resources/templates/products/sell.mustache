{{>layouts/header}}

<div class="container mt-4">
    <h2>상품 판매 등록</h2>

    <!-- 상품 이미지 표시 -->
    <div class="text-center mb-4">
        <img src="../../images/{{product.pimg}}" class="img-fluid shadow-sm" alt="{{product.pname}}" style="height: 300px; object-fit: cover;">
    </div>

    <form action="/products/{{productId}}/sell" method="post">
        <div class="mb-3">
            <label for="size" class="form-label">사이즈</label>
            <select id="size" name="size" class="form-control" required>
                <option value="225">225</option>
                <option value="230">230</option>
                <option value="235">235</option>
                <option value="240">240</option>
                <option value="245">245</option>
                <option value="250">250</option>
                <option value="255">255</option>
                <option value="260">260</option>
                <option value="265">265</option>
                <option value="270">270</option>
                <option value="275">275</option>
                <option value="280">280</option>
                <option value="285">285</option>
                <option value="290">290</option>
                <option value="295">295</option>
                <option value="300">300</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="sprice" class="form-label">가격</label>
            <input type="number" id="sprice" name="sprice"  max="1000000"  class="form-control" required>
        </div>

        <button type="submit" class="btn btn-primary">판매 등록</button>
    </form>
</div>

{{>layouts/footer}}
