{{>layouts/header}}
<form class="container my-5 p-4 border rounded shadow-sm" action="/products/create" method="post" enctype="multipart/form-data">
    <h2 class="mb-4 text-center text-primary">상품 등록</h2>

    <!-- 상품명 -->
    <div class="mb-3">
        <label class="form-label fw-bold">상품명</label>
        <input type="text" class="form-control" name="pname" placeholder="상품명을 입력하세요" required>
    </div>

    <!-- 가격 -->
<!--    <div class="mb-3">-->
<!--        <label class="form-label fw-bold">가격</label>-->
<!--        <input type="number" class="form-control" name="pprice"  max="1000000" placeholder="가격을 입력하세요" required>-->
<!--    </div>-->

    <!-- 이미지 -->
    <div class="mb-3">
        <label class="form-label fw-bold">이미지</label>
        <input type="file" class="form-control" name="pimg" accept="image/*" required>
        <small class="form-text text-muted">이미지 파일을 선택하세요</small>
    </div>

    <!-- 카테고리 -->
    <div class="mb-3">
        <label class="form-label fw-bold">카테고리</label>
        <select class="form-select" name="categoryId" required>
            <option value="" disabled selected>카테고리 선택</option>
            <option value="1">나이키</option>
            <option value="2">아디다스</option>
            <option value="3">아식스</option>
            <option value="4">뉴발란스</option>
            <option value="5">기타</option>
        </select>
    </div>

    <!-- 버튼 -->
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary px-4">등록</button>
        <a href="/products" class="btn btn-secondary px-4">취소</a>
    </div>
</form>
{{>layouts/footer}}
